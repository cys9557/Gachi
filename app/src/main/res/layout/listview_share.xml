<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@drawable/back_angle">

    <TextView
        android:id="@+id/reply"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:text="0"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/myinform"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/reply"
        android:background="@drawable/back_angle"/>

    <TextView
        android:id="@+id/item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_toLeftOf="@id/item_iv"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="아이디"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FF222222"
        android:layout_below="@id/item_tv_title"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14:00"
        android:layout_toRightOf="@id/item_tv_id"
        android:layout_below="@id/item_tv_title"
        android:textColor="#FF222222"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@+id/eye"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/eye"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/item_tv_title"
        android:layout_toRightOf="@id/time"/>

    <TextView
        android:id="@+id/num_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_tv_title"
        android:layout_toRightOf="@id/eye"
        android:text="100"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"
        android:textColor="#FF222222"/>


</RelativeLayout>